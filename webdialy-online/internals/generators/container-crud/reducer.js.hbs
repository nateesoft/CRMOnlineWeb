import produce from 'immer';
import * as constants from './constants';
const { v4 } = require('uuid');

export const initialState = {
  list: [],
  data: {
    uuid_index: '',
    Column1: '',
    Column2: '',
    Column3: '',
  },
  page: 'LIST',
  status: null,
  message: null,
  currentId: '',
};

/* eslint-disable default-case, no-param-reassign */
const {{ camelCase name }}Reducer = (state = initialState, action) =>
  produce(state, draft => {
    switch (action.type) {
      case constants.CHANGE_PAGE:
        draft.page = action.payload;
        break;
      case constants.INIT_LOAD:
        break;
      case constants.INIT_LOAD_SUCCESS:
        draft.list = action.payload;
        draft.status = 'Success';
        draft.message = 'Load data success';
        break;
      case constants.INIT_LOAD_ERROR:
        draft.status = 'Error';
        draft.message = 'Load data error!';
        break;
      case constants.LOAD_EDIT:
        draft.data.uuid_index = action.payload.uuid_index;
        draft.data = action.payload
        break;
      case constants.LOAD_EDIT_SUCCESS:
        draft.list = action.payload;
        draft.status = 'Success';
        draft.message = 'Load data to edit success';
        break;
      case constants.LOAD_EDIT_ERROR:
        draft.status = 'Error';
        draft.message = 'Load data to edit error!';
        break;
      case constants.CREATE_ITEM:
        draft.data.uuid_index = v4();
        draft.data.Column1 = action.payload.Column1;
        draft.data.Column2 = action.payload.Column2;
        draft.data.Column3 = action.payload.Column3;
        break;
      case constants.CREATE_ITEM_SUCCESS:
        draft.status = 'Success';
        draft.message = 'Create item success';
        break;
      case constants.CREATE_ITEM_ERROR:
        draft.status = 'Error';
        draft.message = 'Create data error!';
        break;
      case constants.UPDATE_ITEM:
        draft.data = action.payload
        break;
      case constants.UPDATE_ITEM_SUCCESS:
        draft.status = 'Success';
        draft.message = 'Update data success';
        break;
      case constants.UPDATE_ITEM_ERROR:
        draft.status = 'Error';
        draft.message = 'Update data error!';
        break;
      case constants.DELETE_ITEM:
        draft.data.uuid_index = action.payload;
        break;
      case constants.DELETE_ITEM_SUCCESS:
        draft.status = 'Success';
        draft.message = 'Delete data success';
        break;
      case constants.DELETE_ITEM_ERROR:
        draft.status = 'Error';
        draft.message = 'Delete data error!';
        break;
      case constants.GET_ITEM:
        break;
      case constants.GET_ITEM_SUCCESS:
        draft.status = 'Success';
        draft.message = 'Get data success';
        break;
      case constants.GET_ITEM_ERROR:
        draft.status = 'Error';
        draft.message = 'Get data error!';
        break;
    }
  });

export default {{ camelCase name }}Reducer;
